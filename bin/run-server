#!/usr/bin/env bash
# -*- mode: shell-script -*-

set -euo pipefail

if [ ! -f "./src/tiddlywiki.info" ]; then
    echo "please run $0 from the project root"
    exit 1
fi

docker run \
    -v $(pwd)/src:/wiki \
    -p 8080:8080 \
    --user $(id -u):$(id -g) \
    tiddlywiki:latest \
    /wiki \
    --listen \
    "$@"
